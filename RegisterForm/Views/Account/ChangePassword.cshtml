@model RegisterForm.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-4">
    <h2 class="mb-4">Change Password</h2>

    <ul class="nav nav-tabs" id="editTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link" asp-action="Edit" asp-controller="Account">Profile</a>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link active" type="button">Change Password</button>
        </li>
    </ul>

    <div class="tab-content mt-3 show">
        <div class="tab-pane fade show active">
            <form asp-action="ChangePassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="mb-3">
                    <label asp-for="OldPassword" class="form-label">Old password</label>
                    <input asp-for="OldPassword" class="form-control" placeholder="Enter your old password" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">New password</label>
                    <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm password</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="d-flex align-items-center mb-3 gap-2">
                        <img src="@Url.Action("CaptchaImage")" alt="CAPTCHA"/>
                        <div class="flex-grow-1">
                            <input asp-for="Captcha" class="form-control" placeholder="Enter text from the image" />
                            <span asp-validation-for="Captcha" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Change Password</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
