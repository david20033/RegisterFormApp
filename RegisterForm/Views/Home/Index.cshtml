@{
    ViewData["Title"] = "Home";
}
@if (TempData["SuccessMessage"] != null)
{
    <div style="position: fixed; top: 20px; left: 20px; z-index: 1050; min-width: 250px;">
        <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="container text-center mt-5">  
    @if (!User.Identity.IsAuthenticated)
    {
        <h1 class="display-4 mb-4">Welcome!</h1>
        <p class="lead mb-4">
            Please register or login to continue.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg">
                Register
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success btn-lg">
                Login
            </a>
        </div>
    }
    else
    {
        <h1 class="display-4 mb-4">Welcome back, @User.Identity.Name!</h1>
        <p class="lead">You are logged in.</p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Account" asp-action="Edit" class="btn btn-outline-success btn-lg mt-3">Edit Profile</a>
        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger btn-lg mt-3">Logout</button>
        </form>
        </div>
    }
</div>

